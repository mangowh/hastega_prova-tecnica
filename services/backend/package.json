{
  "name": "backend",
  "scripts": {
    "check": "tsc --noEmit",
    "start": "npm run migration:apply && npm run db:seed && ts-node --transpileOnly src/index.ts",
    "dev": "cross-env NODE_ENV=development ts-node ./src/index.ts",
    "migration:generate": "drizzle-kit generate:pg",
    "migration:apply": "ts-node ./scripts/migrate.ts",
    "db:seed": "ts-node ./scripts/seed.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@faker-js/faker": "^8.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-graphql": "^0.3.4",
    "drizzle-orm": "^0.30.9",
    "express": "^4.19.2",
    "graphql": "^16.8.1",
    "postgres": "^3.4.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.20.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
